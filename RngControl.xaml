        <TextBox Name="max" HorizontalAlignment="Left" Height="30" Margin="317,90,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="62" TextChanged="max_TextChanged"/>
        <Label Content="Min" HorizontalAlignment="Left" Height="30" Margin="317,144,0,0" VerticalAlignment="Top" Width="62"/>
        <TextBox Name="min" HorizontalAlignment="Left" Height="30" Margin="317,179,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="62" TextChanged="min_TextChanged"/>
    </Grid>

</UserControl>
